{
  "name": "from-us.com",
  "description": "from-us",
  "version": "1.0",

  "permissions": [
    "https://secure.flickr.com/", "tabs", "http://*/*", "storage", "cookies"
  ],

  "browser_action": {
    "name": "from-us.com",
    "default_icon": "img/on.png",
    "default_popup": "popup.html"
  },

  "background": {
      "persistent" : false,
     "scripts" : ["event.js"] 
  },


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["clixml/fromus_recuperation.js"],
      "run_at": "document_end"
    }
  ],

  "manifest_version": 2
}
